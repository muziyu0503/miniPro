.rank {
  padding: 30rpx;
  box-sizing: border-box;
}

.rank>view,
.item {
  display: flex;
  align-items: center;
  justify-content: flex-start;
  text-align: center;
  margin-top: 20rpx;
}

.flex1 .img .jifen {
  flex: 1;
}

.flex2{
  flex: 2;
}

.portrait {
  width: 380rpx;
  margin-left: 150rpx;
  margin-right: 50rpx;
  text-align: left;
  box-sizing: border-box;
}
.jifen{
  width: 165rpx;
}
.img{
  width: 135rpx;
  text-align: left;
}
.rank>view view {
  vertical-align: middle;
}

.item {
  font-size: 24rpx;
}

.head {
  margin-bottom: 20rpx;
}

.img image {
  width: 40rpx;
  height: 50rpx;
  margin-left: 5rpx;
  vertical-align: middle;
}

.portrait image {
  width: 80rpx;
  height: 80rpx;
  border-radius: 100rpx;
  vertical-align: middle;
  margin-right: 10rpx;
}