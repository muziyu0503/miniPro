page {
  height: 100%;
  padding: 30rpx;
  box-sizing: border-box;
}
.search {
  position: relative;
  border: 2rpx solid #cfcfd0;
  display: flex;
  padding: 10rpx;
  align-items: center;
  border-radius: 50rpx;
  font-size: 28rpx;
  padding-right: 34rpx;
  box-sizing: border-box;
}
button {
  padding: 0;
  margin: 0;
}
.search .searchbtn {
  width: 100rpx;
  height: 70rpx;
  background: #5cadff;
  color: #ffffff;
  font-size: 30rpx;
  border-radius: 10rpx;
}
.search input {
  flex: 1;
}
.searchbox {
  height: 80rpx;
}
.search image {
  width: 50rpx;
  height: 50rpx;
}
.search-fixed {
  position: fixed;
}


.row {
  margin-top: 20rpx;
  height: calc(100% - 80rpx);
}

.item {
  font-size: 20rpx;
  width: 220rpx;
  display: inline-block;
  margin-right: 15rpx;
  margin-bottom: 20rpx;
}
.item:nth-child(3n){
  margin-right: 0;
}

.item image {
  width: 220rpx;
  height: 250rpx;
  margin-bottom: 5rpx;
}

.item>view {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size:22rpx;
}

.item text {
  color: #ed4014;
  font-size: 30rpx;
  margin-top: 10rpx;
}