page {
  height: 100vh;
  padding: 30rpx 0 0 0;
  box-sizing: border-box;
}
.p30 {
  padding: 0 30rpx;
  box-sizing: border-box;
}
.search {
  position: relative;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  width: 100%;
}

button {
  padding: 0;
  margin: 0;
}

.search .searchbtn {
  width: 120rpx;
  height: 86rpx;
  background: rgb(86, 86, 86);
  color: #ffffff;
  font-size: 30rpx;
  border-top-right-radius: 50rpx;
  border-bottom-right-radius: 50rpx;
  position: absolute;
  right: -11px;
  z-index: 2;
}

.search input {
  flex: 1;
}

.searchbox {
  height: 90rpx;
  border: 2rpx solid #cfcfd0;
  padding: 0 20rpx 0 10rpx;
  box-sizing: border-box;
  border-radius: 50rpx;
  align-items: center;
  margin-bottom: 50rpx;
  margin-left: 10rpx;
  margin-right: 10rpx;
}

.search image {
  width: 50rpx;
  height: 50rpx;
}

.search-fixed {
  position: fixed;
}

.mall {
  height: 100%;
}

.row {
  height: calc(100% - 90rpx - 50rpx);
}
.row-wrap {
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
  padding: 0 4px;
  box-sizing: border-box;
}
.item {
  font-size: 20rpx;
  width: 355rpx;
  display: inline-block;
  margin-bottom: 20rpx;
  /* border-radius: 14rpx; */
  overflow: hidden;
  /* box-shadow: 0rpx 4rpx 11rpx #cccccc; */
  padding-bottom: 20rpx;
}
.item .name {
  padding-left: 20rpx;
  padding-top: 10rpx;
}
.item:nth-child(2n) {
  margin-right: 0;
}

.item image {
  width: 100%;
  height: 240rpx;
  margin-bottom: 5rpx;
}

.item>view {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size: 30rpx;
  color: #555;
  max-height: 60rpx;
  padding: 0 10rpx;
}
.item > text {
  color: #000000;
  font-size: 30rpx;
  margin-top: 10rpx;
  padding: 0 20rpx;
}
.item > text text{
  font-weight: bold;
}
