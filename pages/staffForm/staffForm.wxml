<!--pages/staffForm/staffForm.wxml-->
<view class="dis-flexr form">
  <view class="title  dis-flex-center">请填写基本信息</view>
  <view class="content">
    <view class="form-item">
      <input class="form-input"  placeholder="姓名"  bindinput="bindnamevalue"/>
    </view>
    <view class="form-item">
      <input class="form-input"  placeholder="手机号" bindinput="bindphonevalue" type="number"/>
    </view>
    <view class="form-item">
      <input class="form-input"  placeholder="职位" bindinput="bindposvalue"/>
    </view>
  </view>
  <view class="submitbtn" bindtap="submitOrder">提交</view>
  
  <view style="font-size: 30rpx;margin-bottom:10rpx; margin-top: 50rpx">温馨提示</view>
  <view style="font-size:26rxp;color:#333">提交之后需管理员进行审核</view>
</view>
