.containt {
  padding: 30rpx;
  box-sizing: border-box;
}

.swiper {
  height: 350rpx;
  border-radius: 10rpx;
  overflow: hidden;
}

.swiper image {
  width: 100%;
  height: 250rpx;
}

.btn-block {
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
}

.recommend {
  height: 200rpx;
  width: 400rpx;
  background: url('https://ss1.bdstatic.com/70cFvXSh_Q1YnxGkpoWK1HF6hhy/it/u=1448257146,587581063&fm=26&gp=0.jpg');
  background-size: cover;
  text-align: center;
  color: #ffffff;
  line-height: 200rpx;
  border-radius: 10rpx;
  font-size: 40rpx;
}

.btn {
  width: 270rpx;
}

.btn view {
  text-align: center;
  background: #5cadff;
  color: #ffffff;
  padding: 27rpx;
  box-sizing: border-box;
  margin-bottom: 15rpx;
  border-radius: 10rpx;
  font-size: 30rpx;
}

.btn view:last-child {
  margin-bottom: 0;
  background: #2db7f5;
}

.rank-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  margin-top: 40rpx;
}

.rank-header view:last-child:active {
  opacity: .75;
}

.row {
  margin-top: 20rpx;
}

.item {
  font-size: 20rpx;
  width: 220rpx;
  display: inline-block;
  margin-right: 15rpx;
  margin-bottom: 20rpx;
}
.item:nth-child(3n){
  margin-right: 0;
}

.item image {
  width: 220rpx;
  height: 250rpx;
  margin-bottom: 5rpx;
}

.item>view {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size:22rpx;
}

.item text {
  color: #ed4014;
  font-size: 30rpx;
  margin-top: 10rpx;
}