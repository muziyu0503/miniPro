.containt {
 
}

.swiper {
  height: 800rpx;
  /* border-radius: 10rpx; */
  overflow: hidden;
}
.p30 {
  padding: 0 30rpx;
  box-sizing: border-box;
}
.swiper image {
  width: 100%;
  height: 100%;
}

.btn-block {
  margin-top: 20rpx;
  display: flex;
  align-items: center;
  justify-content: space-between;
  padding: 0 8rpx;
  box-sizing: border-box;
}

.recommend {
  height: 150rpx;
  width: 32%;
  background: url('https://ss1.bdstatic.com/70cFvXSh_Q1YnxGkpoWK1HF6hhy/it/u=1448257146,587581063&fm=26&gp=0.jpg');
  background-size: cover;
  text-align: center;
  color: #ffffff;
  line-height: 150rpx;
  font-size: 36rpx;
  position: relative;
  box-shadow: 0rpx 8rpx 11rpx #cccccc;
  border-radius: 8rpx;
}
.recommend::hover {
  opacity: 0.6;
}
.mask {
  position: absolute;
  left: 0;
  top: 0;
  bottom: 0;
  width: 100%;
  height: 100%;
  background: #000;
  opacity: 0.2;
  z-index: 1;
}
.recommend text {
  z-index: 2;
  position: relative;
}
.cartype {
  background: url('http://benz-points-mall-1252428216.cos.ap-nanjing.myqcloud.com/images/banner/p2.jpg');
  background-size: cover;
}
.ranktype {
  background: url('http://benz-points-mall-1252428216.cos.ap-nanjing.myqcloud.com/images/banner/p3.jpg');
  background-size: cover;
}
.btn {
  width: 270rpx;
}

.btn view {
  text-align: center;
  background: #3e3d40;
  background-image: linear-gradient(to bottom,#3e3d40 0,#676767 100%);
  color: #ffffff;
  padding: 27rpx;
  box-sizing: border-box;
  margin-bottom: 15rpx;
  font-size: 30rpx;
}

.btn view:last-child {
  margin-bottom: 0;
  background: #676767;
  background-image: linear-gradient(to bottom,#676767 0,#3e3d40 100%);
}

.rank-header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  font-size: 28rpx;
  margin-top: 60rpx;
  margin-bottom: 40rpx;

}
.rank-header text{
  font-size: 50rpx;
  color: #555;

}

.rank-header view{
  color: #555;
  font-size: 30rpx;
}
.rank-header view:last-child:active {
  opacity: .75;
}

.row {
  margin-top: 20rpx;
  display: flex;
  flex-wrap: wrap;
  justify-content: space-between;
}

.item {
  font-size: 20rpx;
  width: 360rpx;
  display: inline-block;
  margin-bottom: 20rpx;
  overflow: hidden;
  padding-bottom: 20rpx;
  border-radius: 4rpx;

}
.item .name {
  padding-left: 20rpx;
  padding-top: 10rpx;
}
.item:nth-child(2n){
  margin-right: 0;
}

.item image {
  width: 100%;
  height: 350rpx;
  margin-bottom: 5rpx;
}

.item>view {
  display: -webkit-box;
  -webkit-box-orient: vertical;
  -webkit-line-clamp: 2;
  overflow: hidden;
  font-size:30rpx;
  color: #555;
  height: 60rpx;
  padding: 0 10rpx;
}

.item text {
  color: #ed4014;
  font-size: 30rpx;
  margin-top: 10rpx;
  padding: 0 20rpx;
}