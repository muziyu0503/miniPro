.person {
  padding: 30rpx;
}

.card {
  width: 100%;
  height: 250rpx;
  background-color: rgb(51, 51, 51);
  border-radius: 24rpx;
  font-size: 28rpx;
  text-align: center;
  padding: 30rpx;
  box-sizing: border-box;
  display: flex;
  justify-content: space-between;
  align-items: center;
}

.card image,
.call image {
  width: 150rpx;
  height: 150rpx;
  border-radius: 80rpx;
  flex-shrink: 0;
}

.name {
  color: #ffffff;
  font-size: 32rpx;
  flex: 2;
  text-align: left;
  margin-left: 60rpx;
}

.vip {
  color: rgba(242, 226, 174, 0.3);
  font-size: 42rpx;
  margin-top: 10rpx;
}

.card .right {
  color: #ffffff;
  margin-right: 30rpx;
}

.card .right .num {
  font-size: 36rpx;
}

.card .right text {
  font-size: 24rpx;
}

.card .right .detail {
  font-size: 28rpx;
}

.h3 {
  font-size: 30rpx;
  margin-bottom: 20rpx;
  margin-top: 40rpx;
}

.white-card {
  width: 100%;
  background-color: rgb(255, 255, 255);
  padding: 30rpx;
  box-sizing: border-box;
  border-radius: 24rpx;
  position: relative;
}

.check {
  font-size: 26rpx;
  text-align: right;
  color: #555;
}

.flex {
  display: flex;
  align-items: center;
  justify-content: space-around;
  font-size: 26rpx;
  margin-top: 40rpx;
}

.flex>view {
  text-align: center;
}

.flex>view:last-child {
  margin-left: 100rpx;
}

.icon {
  width: 60rpx;
  height: 60rpx;
}

.call {
  display: flex;
  align-items: center;
  justify-content: space-between;
  font-size: 24rpx;
  line-height: 1.5;
  margin-bottom: 20rpx;
}

.call>view {
  width: 400rpx;
  font-size: 28rpx;
  line-height: 1.6;
}

.call>view text {
  color: #676767;
}

.call-not {
  display: flex;
  justify-content: space-between;
  margin-bottom: 30rpx;
}

.call-not input {
  border: 2rpx solid #676767;
  width: 400rpx;
  padding: 15rpx 20rpx;
  border-radius: 10rpx;
}

.call-not button {
  width: 200rpx !important;
  background-color: rgb(255, 255, 255) !important;
  border: 2rpx solid rgb(51, 51, 51) !important;
  color: rgb(51, 51, 51) !important;
}

.loginbtn {
  color: #fff;
  font-size: 40rpx;
  width: 100%;
}

.bind {
  width: 100rpx !important;
  padding: 0 !important;
  color: #fff;
  background-color: rgb(51, 51, 51);
  margin: 0 !important;
  float: right;
  font-size: 28rpx;
}

.search {
  background: #ffffff !important;
  color: #000000 !important;
  opacity: .75;
}

.search {
  position: relative;
  display: flex;
  align-items: center;
  font-size: 28rpx;
  width: 100%;
}

button {
  padding: 0;
  margin: 0;
}

.search .searchbtn {
  width: 120rpx;
  height: 86rpx;
  background: rgb(12, 12, 12);
  color: #ffffff;
  font-size: 30rpx;
  border-top-right-radius: 50rpx;
  border-bottom-right-radius: 50rpx;
  position: absolute;
  right: -11px;
  z-index: 2;
}

.search input {
  flex: 1;
}

.searchbox {
  height: 90rpx;
  border: 2rpx solid #cfcfd0;
  padding: 0 20rpx 0 10rpx;
  box-sizing: border-box;
  border-radius: 50rpx;
  align-items: center;
  margin-bottom: 50rpx;
}

.search image {
  width: 50rpx;
  height: 50rpx;
}

.search-fixed {
  position: fixed;
}